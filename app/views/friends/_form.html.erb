    </div>

    <div>
      <%= form.label :last_name, style: "display: block" %>
      <%= form.text_field :last_name, class:"form-control", placeholder:"Insert your last name"%>
    </div>

    <div>
      <%= form.label :email, style: "display: block" %>
      <%= form.text_field :email, class:"form-control", placeholder:"Insert your email" %>
    </div>

    <div>
      <%= form.label :phone, style: "display: block" %>
      <%= form.text_field :phone, class:"form-control", placeholder:"Insert your phone number" %>
    </div>

    <div>
      <%= form.label :twitter, style: "display: block" %>
      <%= form.text_field :twitter, class: "form-control", placeholder:"Insert your twitter" %>
    </div>

    <div style="padding-top: 1%">
      <%= form.submit :submit, class:"btn btn-success"%>
    </div>

  
    <% if friend.errors.any? %>
      <div style="color: red">
